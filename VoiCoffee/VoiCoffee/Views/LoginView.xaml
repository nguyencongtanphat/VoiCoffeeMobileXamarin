<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiCoffee.Views.LoginView"
             xmlns:vm="clr-namespace:VoiCoffee.ViewModels"
             Visual="Material">
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid Padding="10"
              VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0"
                         VerticalOptions="Center">
                <Image Source="https://i.imgur.com/tRkWPdm.png"
                       HeightRequest="250"></Image>
                <Label Text="ĐĂNG NHẬP"
                       FontFamily="CabinSketch"
                       TextColor="#026D4D"
                       FontAttributes="Bold"
                       FontSize="25"
                       HorizontalOptions="Center"></Label>
            </StackLayout>
            <StackLayout Grid.Row="1"
                         Spacing="10">
                <Entry Placeholder="Nhập tài khoản"
                       Text="{Binding Username}"></Entry>
                <Entry Placeholder="Nhâp mật khẩu"
                       Text="{Binding Password}"
                       IsPassword="True"></Entry>
                <Button Text="ĐĂNG NHẬP"
                        Command='{Binding LoginCommand}'
                        HorizontalOptions="Center"
                        BackgroundColor="#026D4D"
                        TextColor="White"
                        WidthRequest="200"
                        HeightRequest="60"
                        ></Button>
                <Label Text="Bạn chưa có tài khoản?" TextColor="#808080" HorizontalOptions="Center"></Label>
                <Button Text="Đăng ký"
                        Command="{Binding RegisterCommand}"
                        HorizontalOptions="Center"
                        BackgroundColor="Transparent"
                        TextColor="#026D4D"
                        BorderColor="Transparent"
                        WidthRequest="200"
                        HeightRequest="60"
                        ></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>