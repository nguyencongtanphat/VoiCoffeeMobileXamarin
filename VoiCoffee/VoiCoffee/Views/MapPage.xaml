<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:map="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    x:Class="VoiCoffee.Views.MapPage">
    <StackLayout>
       <ImageButton Source="https://cdn2.iconfinder.com/data/icons/font-awesome/1792/angle-left-512.png"
                    WidthRequest="40" HorizontalOptions="Start" Aspect="AspectFill" VerticalOptions="Start" Margin="10,30,10,0" Clicked="ImageButton_Clicked"
                    BackgroundColor="Transparent"/>
       <map:Map x:Name="map"
               IsShowingUser="True"
               MoveToLastRegionOnLayoutChange="False" HasZoomEnabled="True">
         <x:Arguments>
             <map:MapSpan>
                 <x:Arguments>
                     <map:Position>
                         <x:Arguments>
                             <x:Double>10.874336</x:Double>
                             <x:Double>106.801167</x:Double>
                         </x:Arguments>
                     </map:Position>
                     <x:Double>0.01</x:Double>
                     <x:Double>0.01</x:Double>
                 </x:Arguments>
             </map:MapSpan>
         </x:Arguments>
     </map:Map>
    </StackLayout>
</ContentPage>
